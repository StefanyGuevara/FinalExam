@model Quote.Pages.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="display-4">Delete Quote</h1>

<h3>Are you sure you want to remove this Quote?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            QuoteID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quote.QuoteID)
        </dd>
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quote.Author)
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quote.Date)
        </dd>
        <dt class="col-sm-2">
            Subject
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quote.Subject)
        </dd>
        <dt class="col-sm-2">
            Citation
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quote.Citation)
