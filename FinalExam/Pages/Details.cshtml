@page
@model Quote.Pages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="display-4">Quote Details</h1>

<div>
    <h4>Quotes</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Quote
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quotes.QuoteID)
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quote.Date)
        </dd>
        <dt class="col-sm-2">
            Subject
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quote.Subject)
        </dd>
        <dt class="col-sm-2">
            Citation
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quote.Citation)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Quote.QuoteID">Edit</a>
    <a class="btn btn-primary" asp-page="./Index">Back to List</a>
</div>
